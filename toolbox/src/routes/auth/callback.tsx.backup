import { createFileRoute } from '@tanstack/react-router'
import { useEffect } from 'react'

export const Route = createFileRoute('/auth/callback')({
  component: CallbackHandler,
})

function CallbackHandler() {
  useEffect(() => {
    // Redirect to Azure AD callback handler
    console.log('[CALLBACK] Redirecting to Azure AD callback handler')
    window.location.href = '/auth/azure-callback'
  }, [])

  return (
    <div className="flex items-center justify-center min-h-screen">
      <div className="text-center">
        <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto mb-4"></div>
        <div>Redirecting to Azure AD authentication...</div>
      </div>
    </div>
  )
} 